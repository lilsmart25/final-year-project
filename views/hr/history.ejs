            <h2
              class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
            >
              My History
            </h2>

            <h4
              class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"
            >
              All My Leave Application
            </h4>
            <div class="w-full mb-8 overflow-hidden rounded-lg shadow-xs">
              <div class="w-full overflow-x-auto">
                <table class="w-full whitespace-no-wrap">
                  <thead>
                    <tr
                      class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800"
                    >
                      <th class="px-4 py-3">S/N</th>
                      <th class="px-4 py-3">Type Of Leave</th>
                      <th class="px-4 py-3">Staff Email</th>
                      <th class="px-4 py-3">State</th>
                      <th class="px-4 py-3">Date Request</th>
                      <th class="px-4 py-3">More Detail</th>
                    </tr>
                  </thead>
                  <tbody
                    class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800"
                  >
                  <%var x = 1%>
                  <%data.forEach(value=>{%>
                    <tr class="text-gray-700 dark:text-gray-400">
                      <td class="px-4 py-3 text-sm">
                        <%=x%>
                      </td>
                      <td class="px-4 py-3">
                        <div class="flex items-center text-sm">
                          <div>
                            <p class="font-semibold"><%= value.typeOfLeave%></p>
                          </div>
                        </div>
                      </td>
                      <td class="px-4 py-3">
                        <div class="flex items-center text-sm">
                          <div>
                            <p class="font-semibold"><%= value.userEmail%></p>
                          </div>
                        </div>
                      </td>
                      <td class="px-4 py-3 text-sm">
                        <% if(value.state == "Pending"){%>
                          <span
                          class="px-2 py-1 font-semibold leading-tight text-orange-700 bg-orange-100 rounded-full dark:text-white dark:bg-orange-600"
                        >
                          Pending
                        </span>
                      <%}else if(value.state == 'Approved'){%>
                        <span
                        class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100"
                      >
                        Approved
                      </span>
                      <%}else if(value.state == 'Denied'){%>
                        <span
                        class="px-2 py-1 font-semibold leading-tight text-red-700 bg-red-100 rounded-full dark:text-red-100 dark:bg-red-700"
                      >
                        Denied
                      </span>
                      <%}else if(value.state == 'Running'){%>
                        Running
                      <%}else{%>
                        Error
                      <%}%>

                      </td>
                      <td class="px-4 py-3 text-xs">
                        <span
                        class="px-2 py-1 font-semibold leading-tight text-gray-700 bg-gray-100 rounded-full dark:text-gray-100 dark:bg-gray-700"
                        >
                        <%= dayjs(value.createdAt).fromNow()%>
                        </span>
                      </td>
                      <td>
                        <a href="/hr/history/<%= value._id%>"
                        class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray"
                        aria-label="Delete"
                      >
                      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path
                          fill-rule="evenodd"
                          d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z"
                          clip-rule="evenodd"
                        ></path>
                      </svg>
                      </a>
                      </td>
                    </tr>
                    <%x++%>
                  <%})%>
                  </tbody>
                </table>
              </div>
