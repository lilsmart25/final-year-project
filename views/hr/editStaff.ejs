        <%include ./includes/header %>
        <main class="h-full pb-16 overflow-y-auto">
          <div class="container px-6 mx-auto grid">
            <form action="/hr/edit/staff/<%= user._id%>" method="post">
            <h2
              class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200"
            >
            Edit <%= user.name%> Details
            </h2>

            <!-- General elements -->
            <h4
              class="mb-4 text-lg font-semibold text-gray-600 dark:text-gray-300"
            >
              staff Details
            </h4>
            <div
              class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800"
            >
              <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400">Name Of Employee</span>
                <input
                  class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                  placeholder="Bala Jnr Balls" required name="name" value="<%= user.name%>"
                />
              </label>
              <br>
              <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400">Email Of Employee</span>
                <input
                  class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                  placeholder="bj@gmail.com" required name="email" value="<%= user.email%>"
                />
              </label>

              <br>
              <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400">Phone Number Of Employee</span>
                <input
                  class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input"
                  placeholder="09036969419" required name="phone" value="<%= user.phone%>"
                />
              </label>

              <label class="block mt-4 text-sm">
                <span class="text-gray-700 dark:text-gray-400">
                  Select Deparment
                </span>
                <select
                  class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray" required name="department"
                >
                <!-- list Of All Department -->
                <%if(user.department !== "Unassigned"){%>
                  <%data.forEach(value=>{%>
                    <%if(value.name == user.department){%>
                    <option value="<%= value.name%>" selected><%= value.name%></option>
                    <%}%>
                    <option value="<%= value.name%>" ><%= value.name%></option>
                  <%})%>
                  <option value="Unassigned" >Unassigned</option>
                  <%}else{%>
                    <%data.forEach(value=>{%>
                      <option value="<%= value.name%>" ><%= value.name%></option>
                    <%})%>
                    <option value="Unassigned" selected>Unassigned</option>
                    <%}%>
                </select>
              </label>

              <label class="block mt-4 text-sm">
                <span class="text-gray-700 dark:text-gray-400">
                  Select Gender
                </span>
                <select
                  class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray" name="gender" required>
                  <%if(user.gender == 'male'){%>
                  <option value="male" selected>Male</option>
                  <option value="female">Female</option>
                  <%}else{%>
                    <option value="male">Male</option>
                    <option value="female" selected>Female</option>
                    <%}%>
                </select>
              </label>

              <label class="block text-sm">
                <span class="text-gray-700 dark:text-gray-400">Date Of Employment</span>
                <input type="date" value="<%= user.doe%>"
                  class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:text-gray-300 dark:focus:shadow-outline-gray form-input" name="doe" required
                />
              </label>

              <div class="flex mt-6 text-sm">
                <label class="flex items-center dark:text-gray-400">
                  <input
                    type="checkbox"
                    class="text-purple-600 form-checkbox focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray" name="terms" required
                  />
                  <span class="ml-2">
                    Update is in agreement to the
                    <span class="underline">privacy policy</span>
                  </span>
                </label>
              </div>
              <br>
              <button type="submit"
              class="flex items-center justify-between px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
              <span>Update <b>!</b></span>
            </button>
